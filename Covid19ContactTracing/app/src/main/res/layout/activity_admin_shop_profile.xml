<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        tools:context=".AdminShopProfileActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/sun"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/shop_name_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/shop_icon_small"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="50dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:layout_below="@id/shop_name_desc"/>

            <TextView
                android:id="@+id/shop_name_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Name"
                android:paddingLeft="50dp"
                android:includeFontPadding="false"
                android:textColor="@color/otp_text_secondary"
                android:textSize="14sp"
                android:layout_above="@id/shop_name_icon" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/phone_small_icon"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="50dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:layout_below="@id/phone_number_desc"/>

            <TextView
                android:id="@+id/phone_number_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:paddingLeft="50dp"
                android:includeFontPadding="false"
                android:textColor="@color/otp_text_secondary"
                android:textSize="14sp"
                android:layout_above="@id/phone_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/manager_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/manager_icon_small"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="50dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:layout_below="@id/manager_name_desc"/>

            <TextView
                android:id="@+id/manager_name_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manager"
                android:paddingLeft="50dp"
                android:includeFontPadding="false"
                android:textColor="@color/otp_text_secondary"
                android:textSize="14sp"
                android:layout_above="@id/manager_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/status_icon_small"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="50dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:layout_below="@id/status_desc"/>

            <TextView
                android:id="@+id/status_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:paddingLeft="50dp"
                android:includeFontPadding="false"
                android:textColor="@color/otp_text_secondary"
                android:textSize="14sp"
                android:layout_above="@id/status_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>