<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_19contacttracing">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Covid19ContactTracing"
        xmlns:tools="http://schemas.android.com/tools">
        <activity
            android:name=".TestAddDetailsActivity"
            android:theme="@style/Theme.Covid19ContactTracing.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CustomerHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VerifyOTPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Covid19ContactTracing.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SendOTPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Covid19ContactTracing.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TestDrawerActivity"
            android:theme="@style/Theme.UserProfile"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CustomerProfileActivity"
            android:theme="@style/Theme.UserProfile" />
        <activity
            android:name=".IntroductoryActivity"
            android:theme="@style/Theme.Covid19ContactTracing.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserAddDetailsActivity" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.Covid19ContactTracing.NoActionBar" />
        <activity android:name=".QRScannerActivity" />
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>